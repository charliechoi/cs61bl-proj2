	}catch (IllegalInferenceException e) {	
	}catch (IllegalInferenceException e) {}
		try{soFar.extendProof("show (p=>(~p=>q))")
		}catch (IllegalInferenceException e) {	
		}catch (IllegalInferenceException e) {}
		 1  show (p=>(~p=>q))
